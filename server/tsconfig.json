{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.server.tsbuildinfo",
    "outDir": "../dist/server",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": ["./@types"], //use one folder more to get types
  },
  "include": ["./src/**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
}
